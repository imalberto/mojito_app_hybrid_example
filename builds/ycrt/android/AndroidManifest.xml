	<supports-screens android:xlargeScreens="true" android:largeScreens="true" android:normalScreens="true" android:smallScreens="true" android:resizeable="true" android:anyDensity="true"/>
    
    <application 
    	android:name="com.yahoo.platform.ychrome.app.YChromeBaseApplication"
